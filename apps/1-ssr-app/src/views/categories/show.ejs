<%# This view displays the details of a single category and lists its products. %>
<%# It's rendered by the `getCategoryById` controller function. %>

<h1>Category: <%= category.name %></h1>
<p><%= category.description %></p>

<hr>

<h2>Products in this category:</h2>
<% if (products && products.length > 0) { %>
    <table class="interactive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td>$<%= product.price %></td>
                    <td>
                        <a href="/products/<%= product.id %>">View Details</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p>There are no products in this category yet.</p>
<% } %>

<div class="actions">
    <a href="/categories" class="button">Back to All Categories</a>
</div>
